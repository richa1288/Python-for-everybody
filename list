# without list
total = 0
count = 0
while (True):
    inp = input('Enter a number: ')
    if inp == 'done': break
    value = float(inp)
    total = total + value
    count = count + 1

average = total / count
print('Average:', average)

# Using list 
t = [10, 12, 13]
print(sum(t))
print(len(t))
print(sum(t)/len(t))
